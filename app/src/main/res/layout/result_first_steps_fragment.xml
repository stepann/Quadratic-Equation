<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="1">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="73dp"
        android:layout_marginTop="10dp"
        android:id="@+id/rl_result_first">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="x ="
            android:textSize="25sp"
            android:textColor="@android:color/black"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />
        <View
            android:layout_width="85dp"
            android:layout_height="1dp"
            android:background="@android:color/black"
            android:id="@+id/v_ResultFirst_divider_first"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginLeft="40dp"
            android:layout_marginStart="40dp" />

        <TextView
            android:textColor="@android:color/black"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:gravity="center"
            android:textSize="25sp"
            android:id="@+id/tv_ResultFirst_numerator"
            android:layout_above="@+id/v_ResultFirst_divider_first"
            android:layout_alignLeft="@+id/v_ResultFirst_divider_first"
            android:layout_alignStart="@+id/v_ResultFirst_divider_first"
            android:layout_alignRight="@+id/v_ResultFirst_divider_first"
            android:layout_alignEnd="@+id/v_ResultFirst_divider_first"

            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:id="@+id/tv_ResultFirst_denominator_first"
            android:textSize="25sp"
            android:gravity="center"
            android:textColor="@android:color/black"
            android:layout_below="@+id/v_ResultFirst_divider_first"
            android:layout_alignRight="@+id/v_ResultFirst_divider_first"
            android:layout_alignEnd="@+id/v_ResultFirst_divider_first"
            android:layout_alignLeft="@+id/v_ResultFirst_divider_first"
            android:layout_alignStart="@+id/v_ResultFirst_divider_first"
            android:maxWidth="200dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="="
            android:textSize="25sp"
            android:textColor="@android:color/black"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/v_ResultFirst_divider_first"
            android:layout_toEndOf="@+id/v_ResultFirst_divider_first"
            android:layout_marginLeft="10dp"
            android:layout_marginStart="10dp"
            android:id="@+id/equal" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text=""
            android:textSize="25sp"
            android:textColor="@android:color/black"
            android:id="@+id/tv_ResultFirst_result_first"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/equal"
            android:layout_toEndOf="@+id/equal"
            android:layout_marginLeft="13dp"
            android:layout_marginStart="13dp" />

    </RelativeLayout>


</LinearLayout>